.wxParse-u {
  text-decoration: underline; }

.wxParse-hide {
  display: none; }

.WxEmojiView {
  align-items: center; }

.wxEmoji {
  width: 16px;
  height: 16px; }

.wxParse-tr {
  display: flex;
  border-top: 1px solid #e0e0e0;
  border-right: 1px solid #e0e0e0;
  border-bottom: 1px solid #e0e0e0; }

.wxParse-th,
.wxParse-td {
  font-size: 28rpx;
  flex: 1;
  padding: 5px;
  word-break: break-all;
  border-left: 1px solid #e0e0e0; }

.wxParse-td:last {
  border-top: 1px solid #e0e0e0; }

.wxParse-th {
  border-top: 1px solid #e0e0e0;
  background: #f0f0f0; }

.wxParse-del {
  display: inline; }

.wxParse-figure {
  overflow: hidden; }

/* 重置table样式 */
.wxParse-table {
  border: solid #f3f4f8;
  border-width: 1px 0 0 1px; }

.wxParse-table .wxParse-tr {
  border: 0; }

.wxParse-table .wxParse-tr.firstRow .wxParse-td {
  background-color: #f3f4f8; }

.wxParse-table .wxParse-tr .wxParse-td {
  line-height: 24px;
  padding: 8px;
  border: solid #f3f4f8;
  border-width: 0 1px 1px 0;
  background-color: #fff; }
